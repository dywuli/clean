<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.ktapp.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_secondFragment13"
            app:destination="@id/secondFragment13" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.ktapp.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment13"
        android:name="com.example.ktapp.SecondFragment1"
        android:label="SecondFragment1" >
        <action
            android:id="@+id/action_secondFragment13_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>

</navigation>